---
import { Image } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Imagenes</h1>

  <img
    src="/assets/images/post-05.png"
    width="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <Image
    src={post05Img}
    width="250"
    height="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <Image
    src={post05Img}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="500"
    height="500"
    alt="CSS Grid Layout - Una guía completa"
  />

  <div
    style={{
      height: "3000px",
      display: "flex",
      flexDirection: "column",
      alignItems: "center",
      justifyContent: "center",
    }}
  >
  </div>

  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    width="250"
    height="250"
    alt="Explorando Funciones de ES6"
  />
</MainLayout>
