---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Imagenes</h1>

  <img
    src="/assets/images/post-05.png"
    width="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>Very Low Quality</h2>

  <Image
    src={post05Img}
    width="250"
    height="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>?? Quality</h2>

  <Image
    src={post05Img}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>Low Quality</h2>

  <Image
    src={post05Img}
    quality="low"
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>High Quality</h2>

  <Image
    src={post05Img}
    quality="high"
    style={{
      width: "250px",
      height: "250px",
    }}
    width="500"
    height="500"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>Formatos</h2>

  <Image
    src={post05Img}
    format="jpg"
    style={{
      width: "250px",
      height: "250px",
    }}
    width="500"
    height="500"
    alt="CSS Grid Layout - Una guía completa"
  />

  <h2>Picture</h2>

  //formats={["webp", "avif", "jpeg", "png"]}
  //widths={[240, 540, 720, post05Img.width]}
  //sizes={
    `(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`
  }
  <Picture
    src={post05Img}
    width={post05Img.width / 2}
    densities={[1.5, 2]}
    alt="CSS Grid Layout - Una guía completa"
    style={{
      width: "250px",
      height: "250px",
    }}
    width="500"
    height="500"
    alt="CSS Grid Layout - Una guía completa"
  />

  <div
    style={{
      height: "3000px",
      display: "flex",
      flexDirection: "column",
      alignItems: "center",
      justifyContent: "center",
    }}
  >
  </div>

  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    width="250"
    height="250"
    alt="Explorando Funciones de ES6"
  />
</MainLayout>

<style>
  h2 {
    @apply text-white mt-10;
  }
</style>
